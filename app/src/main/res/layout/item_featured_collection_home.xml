<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.rahulsengupta.livepaper.home.model.FeaturedCollectionItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_half_margin"
        tools:context=".activity.MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/standard_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/standard_margin" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/item_featured_collection_home_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border="true"
            app:civ_border_color="@color/red"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/red"
            app:civ_shadow_radius="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadImage="@{item.imageUrl}"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item_featured_collection_home_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_quarter_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.title}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/item_featured_collection_home_imageview"
            app:layout_constraintStart_toStartOf="@id/item_featured_collection_home_imageview"
            app:layout_constraintTop_toBottomOf="@id/item_featured_collection_home_imageview"
            tools:text="Some long title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>